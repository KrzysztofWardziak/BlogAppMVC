@model IEnumerable<BlogAppMVC.Application.ViewModels.Admin.Blog.BlogDetailVm>

@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Tytuł
            </th>
            <th>
                Opis
            </th>
            <th>
                Zdjęcie
            </th>
            <th>
                Ścieżka
            </th>
            <th>
                Data utworzenia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <a href="/Blog/BlogDetails/@item.Slug">
                    <img src="/Content/img/blog/@item.Id/Thumbs/@item.PhotoPath"/>
                </a>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a href="/blog/BlogDetails/@item.Slug">Szczegóły</a>
            </td>
        </tr>
    }
    </tbody>
</table>
