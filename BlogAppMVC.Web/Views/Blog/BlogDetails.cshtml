@using Microsoft.EntityFrameworkCore.Internal
@model BlogAppMVC.Application.ViewModels.Admin.Blog.BlogDetailVm

@{
    ViewData["Title"] = "Blog szczegóły";
}

<h1>@Model.Title</h1>


<div class="row">
    <div class="col-md-8 col-xs-4" >
        <img src="/Content/img/blog/@Model.Id/@Model.PhotoPath" />
    </div>
    <div class="col-md-4" style="padding: 20px">
        @Html.DisplayFor(model => model.Title)
        <br />
        @Html.DisplayFor(model => model.Text)
        <br />
        @Html.DisplayFor(model => model.CreatedDate)
    </div>
</div>


<h3>Zdjęcia</h3>


<div class="col-xs-12 fancyboxdiv" id="lightgallery">
    <br /><br />

    @if (Model.GalleryImages.Count() < 1)
    {
        <h4>Brak zdjęć dla tego wpisu.</h4>
    }
    else
    {
        foreach (var image in Model.GalleryImages)
        {

            <div style="display: inline-block">
                <a class="fancybox" rel="gallery1" href="/Content/img/blog/@Model.Id/Gallery/@image">
                    <img  src="/Content/img/Blog/@Model.Id/Gallery/Thumbs/@image" />
                </a>
            </div>
        }
    }
</div>

<link href="~/Fancybox/jquery.fancybox.css" rel="stylesheet" />

@section Scripts
{
    <script src="~/Scripts/jquery.fancybox.js"></script>

    <script>
    $(function () {
        // FancyBox nuget
            $(".fancybox").fancybox();
            ///////////////////////////////////
        });
    </script>

}

