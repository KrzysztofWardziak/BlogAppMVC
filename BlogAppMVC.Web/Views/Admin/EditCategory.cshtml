@model BlogAppMVC.Application.ViewModels.Admin.Category.NewCategoryVm

@{
    ViewData["Title"] = "Edycja kategorii";
}

<h1>Edycja kategorii</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Slug" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Sorting" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Categories">Powrót do kategorii</a>
</div>

