@model BlogAppMVC.Application.ViewModels.Admin.Blog.NewBlogVm

@{
    ViewData["Title"] = "Edycja bloga";
}

<h1>Edycja bloga</h1>

<hr />

@using (Html.BeginForm("EditBlog", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <form asp-action="EditBlog">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Tytuł</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Opis</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Text, new { @class = "form-control textarea-for", @rows = "8", @cols = "200" })
                        @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Slug" class="form-control" />
                </div>

                @*<div class="form-group col-md-4">
                        <label asp-for="Image" class="control-label">Zdjęcie</label>
                        <input type="file" asp-for="Image" class="form-control" id="ImageUpload" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <img id="imgpreview" src="#" />
                    </div>*@

                <div class="form-group">
                    <label class="control-label col-md-2">Zdjęcie</label>
                    <inp />
                    @Html.EditorFor(model => model.PhotoPath, new { htmlAttributes = new { @type = "hidden", @class = "form-control" } })
                    <div class="col-md-10">
                        <img src="Content/img/blog/@Model.Id/@Model.PhotoPath" />
                        <br /><br />
                        <img id="imgpreview" src="#" />
                        <br /><br />
                        <div class="col-md-10">
                            <input type="file" asp-for="Image" name="file" class="form-control" id="ImageUpload" />
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-4">
                    <label class="control-label col-md-2">Kategoria</label>
                    <div>
                        @Html.DropDownListFor(model => model.CategoryId, ViewBag.CategoryId as List<SelectListItem>, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AllBlogs">Powrót do wpisów</a>
    </div>
}

<br />
<br />
<hr />

<form action="/admin/SaveGalleryImages?id=@Model.Id" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm">
    <div class="fallback">
        <input type="file" name="file" multiple />
        <input type="submit" value="Upload" />
    </div>
</form>

<br />
<br />

@if (!Model.GalleryImages.Any())
{
    <h3>Brak galerii zdjęć dla tego wpisu.</h3>
}


@foreach (var image in Model.GalleryImages)
{
    <div style="display: inline-block; margin-right: 15px;">
        <img src="/Content/img/blog/@Model.Id/Gallery/Thumbs/@image"/>
        @*<a asp-action="DeleteImage" class="deleteImage" asp-route-id="@Model.Id">Usuń </a>*@
        @Html.ActionLink("Usuń ", "DeleteImage", "Admin","", new { @class = "deleteImage", data_name = image})
    </div>
}
<link href="~/dropzone/basic.css" rel="stylesheet" />
<link href="~/dropzone/dropzone.css" rel="stylesheet" />

@section Scripts {
    <script src="~/dropzone/dropzone.js"></script>
    <script>
        $(function() {

            // wyswietlanie podgladu obrazka
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $("img#imgpreview").attr("src", e.target.result).width(350).height(250);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }

            $("#ImageUpload").change(function() {
                readURL(this);
            });

            ///////////////////////////////////////////////////////
            // dropzone js
            Dropzone.options.dropzoneForm = {
                acceptedFiles: "image/*",
                init: function() {
                    this.on("complete",
                        function(file) {
                            if (this.getUploadingFiles().length === 0 && this.getQueuedFiles().length === 0) {
                                Location.reload();
                            }
                        });
                    this.on("sending",
                        function(file, xhr, formData) {
                            formData.append("id", @Model.Id);
                        });
                }
            };


            ///////////////////////////////////////////////////////////
            //usuwanie obrazkow z galerii
            $("a.deleteImage").click(function (e) {
                e.preventDefault();
                if (!confirm("Potwierdzasz usunięcie obrazka")) return false;
                var $this = $(this);
                var url = "/admin/DeleteImage";
                var imageName = $this.data("name");
                $.post(url, { id: @Model.Id, imageName: imageName }, function (data) {
                        $this.parent().fadeOut("fast");
                    });
                
            });
        });
    </script>
}
